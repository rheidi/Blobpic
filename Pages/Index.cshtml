@page
@using Blobpics.Pages;
@model IndexModel
@{
    ViewData["Title"] = "Pictures as blobs.";
}

<div class="text-center">
    <h1 class="display-4">Cats and cats</h1>
    <p>Internet doesn't have enough cat pics yet, please add some moar.</a>.</p>
    <body>
        <div class="container">
        <div class="card" style="margin: 1em 0; padding: 1em 0 0 0; align-items: center;">
            <h3>Upload new File</h3>
            <div class="form-group">
                <form method="post" action="" enctype="multipart/form-data">
                    <div style="display: flex;">
                        <input type="file" accept=".png, .jpeg, .jpg, .gif" name="photos" multiple class="form-control" style="margin-right: 1em;">
                        <input type="submit" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
        <div style='display: flex; justify-content: space-between; flex-wrap: wrap;'>
            @foreach (var imageUrl in Model.ImageUrls)
                {
                    <img src="@imageUrl" width="auto" height="300" style="margin: 0.5em 0;" />
                }
        </div>
    </div>
    </body>
</div>
